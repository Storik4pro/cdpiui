<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Name="RootPage"
    x:Class="CDPI_UI.Views.CreateConfigHelper.GoodCheckConfigVisualEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI.Views.CreateConfigHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:lcontrol="using:CDPI_UI"
    mc:Ignorable="d"
    xmlns:l="using:WinUI3Localizer"
    SizeChanged="RootPage_SizeChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid Padding="20 10 20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="PageTitleTextBlock" l:Uids.Uid="CreateNewConfigMenuItem" FontWeight="Light" FontSize="28"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Grid x:Name="LeftGrid" MinWidth="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock l:Uids.Uid="MarkStrategiesTextBlock"/>
                    <ListView x:Name="LeftListView"
                          ItemContainerStyle="{StaticResource ListViewItemStretchStyle}"
                          Grid.Row="1"
                          AllowDrop="True"
                          CanDragItems="True"
                          CanReorderItems="False"
                          SelectionMode="Single"
                          DragItemsStarting="LeftListView_DragItemsStarting"
                          DragOver="LeftListView_DragOver"
                          Drop="LeftListView_Drop"
                          Loaded="LeftListView_Loaded">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:DragItem">
                                <lcontrol:CreateConfigDesignerUserControl
                                    Args="{Binding Args}"
                                    SiteListName="{Binding SiteListName}"
                                    Margin="0 2.5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <controls:ContentSizer Grid.Column="1"
                                       TargetControl="{x:Bind LeftGrid}"/>
                <Grid x:Name="RightGrid" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock l:Uids.Uid="ReadyToAddStrategiesTextBlock"/>
                    <ListView x:Name="RightListView"
                              ItemContainerStyle="{StaticResource ListViewItemStretchStyle}"
                              Grid.Row="1"
                              AllowDrop="True"
                              CanDragItems="True"
                              CanReorderItems="True"
                              SelectionMode="Single"
                              DragItemsStarting="RightListView_DragItemsStarting"
                              DragOver="RightListView_DragOver"
                              Drop="RightListView_Drop"
                              DragItemsCompleted="RightListView_DragItemsCompleted"
                              BorderThickness="1"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:DragItem">
                                <lcontrol:CreateConfigDesignerUserControl
                                    Guid="{x:Bind Id, Mode=OneWay}"
                                    Args="{Binding Args}"
                                    SiteListName="{Binding SiteListName}"
                                    ShowGroupModeChooser="{x:Bind ShowGroupModeChooser, Mode=OneWay}"
                                    Modes="{x:Bind Modes, Mode=OneWay}"
                                    ModeChangedCommand="{Binding ChangeMode, ElementName=RootPage}"
                                    Margin="0 2.5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

            </Grid>

        </Grid>
        <Grid Grid.Row="1" x:Name="WarningGrid" Visibility="Collapsed">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="0" Grid.Row="1" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xE814;" Foreground="{ThemeResource SystemFillColorCautionBrush}" />
                <StackPanel Padding="0 10 10 10" Grid.Column="1">
                    <TextBlock l:Uids.Uid="ComponentNotSupportedGrouppingTextBlock"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Padding="0">
            <Border Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" CornerRadius="0" Grid.Row="1" />
            <Grid HorizontalAlignment="Stretch" Padding="20 10 20 10">
                <Button x:Name="GoBackButton" l:Uids.Uid="GoBackButton" MinWidth="150" Click="GoBackButton_Click"/>
                <Button x:Name="GoForwardButton" l:Uids.Uid="GoForwardButton" Style="{ThemeResource AccentButtonStyle}" MinWidth="150" HorizontalAlignment="Right" Click="GoForwardButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
