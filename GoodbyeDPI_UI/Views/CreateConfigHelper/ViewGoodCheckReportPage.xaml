<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Name="RootPage"
    x:Class="GoodbyeDPI_UI.Views.CreateConfigHelper.ViewGoodCheckReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodbyeDPI_UI.Views.CreateConfigHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lcontrol="using:GoodbyeDPI_UI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Padding="20 20 20 5">
            <StackPanel Spacing="10">
                <TextBlock x:Name="PageTitleTextBlock" Text="View GoodCheck report" FontWeight="Light" FontSize="28"/>
                <ListView x:Name="HeadersListView" Margin="0 5 0 0" SelectionMode="None" Padding="0"
                          ItemContainerStyle="{StaticResource ListViewItemStretchStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:GoodCheckReportHeaderModel">
                            <lcontrol:GoodCheckReportHeaderButton 
                                Id="{x:Bind Id, Mode=OneWay}"
                                Header="{x:Bind FileName, Mode=OneWay}"
                                SubHeader="{x:Bind Directory, Mode=OneWay}"
                                SuccessCount="{x:Bind SuccessCount, Mode=OneWay}"
                                FailureCount="{x:Bind FailureCount, Mode=OneWay}"
                                FlagsCount="{x:Bind FlagsCount, Mode=OneWay}"
                                ClickCommand="{Binding DataContext.HeaderClickCommand, ElementName=RootPage}"
                                Margin="0 2.5"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1" x:Name="TipGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Padding="20 0">
                <TextBlock Text="Flashlight tip" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                <RichTextBlock HorizontalAlignment="Right">
                    <Paragraph>
                        <Hyperlink Click="Hyperlink_Click">Hide tip</Hyperlink>
                    </Paragraph>
                </RichTextBlock>
            </Grid>
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="0" Grid.Row="1" />
            <Grid Padding="20 15" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="IconGrid">
                    <Grid.RenderTransform>
                        <TranslateTransform X="0" Y="5"/>
                    </Grid.RenderTransform>
                    <FontIcon Glyph="&#xE7C1;" >
                        <FontIcon.RenderTransform>
                            <TranslateTransform X="0" Y="0"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                    <FontIcon Glyph="&#xEB4B;" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}">
                        <FontIcon.RenderTransform>
                            <TranslateTransform X="-8" Y="-8"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </Grid>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Firstly mark worked arguments using flags in every sitelist group. Then click to NEXT button to create new config with selected arguments" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Padding="0">
            <Border Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" CornerRadius="0" Grid.Row="1" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Padding="0 10 20 10">
                <Button x:Name="GoForwardButton" Content="Next" MinWidth="150" Style="{ThemeResource AccentButtonStyle}" Click="GoForwardButton_Click"/>
                <TeachingTip
                    x:Name="GoForwardButtonTeachingTip"
                    Title="Some sitelists not marked"
                    Subtitle="Do you want to continue anyway? (You actually can go back to this page later)"
                    ActionButtonContent="Yes, I want"
                    CloseButtonContent="No"
                    IsLightDismissEnabled="True"
                    ActionButtonClick="GoForwardButtonTeachingTip_ActionButtonClick"
                    Target="{x:Bind GoForwardButton}">
                    <TeachingTip.IconSource>
                        <SymbolIconSource Symbol="Flag" />
                    </TeachingTip.IconSource>
                </TeachingTip>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
