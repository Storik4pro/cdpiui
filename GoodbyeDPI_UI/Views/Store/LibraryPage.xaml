<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDPI_UI.Views.Store.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI.Views.Store"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:lcontrols="using:CDPI_UI.Controls.Store"
    xmlns:l="using:WinUI3Localizer">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainStackPanel.HorizontalAlignment" Value="Stretch" />
                        <Setter Target="MainStackPanel.Width" Value="auto" />
                        <Setter Target="LibraryTextBlock.HorizontalAlignment" Value="Stretch" />
                        <Setter Target="LibraryTextBlock.Width" Value="auto" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1975"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainStackPanel.HorizontalAlignment" Value="Center" />
                        <Setter Target="MainStackPanel.Width" Value="1860" />
                        <Setter Target="LibraryTextBlock.HorizontalAlignment" Value="Center" />
                        <Setter Target="LibraryTextBlock.Width" Value="1860" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid Padding="0 0" HorizontalAlignment="Stretch">
            <ListView x:Name="ItemsListView" Grid.Row="1" SelectionMode="None" Padding="0"
                          ItemContainerStyle="{StaticResource ListViewItemStretchStyle}">
                <ListView.Header>
                    <TextBlock x:Name="LibraryTextBlock" l:Uids.Uid="LibraryTextBlock" Grid.Row="0" Margin="20 20 20 5" Style="{ThemeResource TitleTextBlockStyle}"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:LibraryItemModel">
                        <lcontrols:StoreLibraryItemButton 
                                StoreId="{x:Bind StoreId, Mode=OneWay}"
                                Title="{x:Bind Title, Mode=OneWay}"
                                Developer="{x:Bind Developer, Mode=OneWay}"
                                Category="{x:Bind Category, Mode=OneWay}"
                                CardImageSource="{x:Bind ImageSource, Mode=OneWay}"
                                CardBackgroundBrush="{x:Bind CardBackgroundBrush, Mode=OneWay}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <Grid Height="20"/>
                </ListView.Footer>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel x:Name="MainStackPanel" Spacing="5" Margin="20 0"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Grid>
    </Grid>
</Page>
