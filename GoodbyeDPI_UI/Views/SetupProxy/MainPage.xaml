<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDPI_UI.Views.SetupProxy.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI.Views.SetupProxy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:l="using:WinUI3Localizer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Padding="20 0">
            <StackPanel Spacing="10">
                <TextBlock l:Uids.Uid="SetupProxyLikeComponentsTextBlock" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock l:Uids.Uid="SetupProxyLikeComponentsTipTextBlock"/>
                <ScrollViewer>
                    <StackPanel Spacing="10">
                        <controls:SettingsCard x:Name="SetupForSystemCard"
                                               l:Uids.Uid="SetupForEntireSystemCard"
                                               IsClickEnabled="True"
                                               Click="SetupForSystemCard_Click">
                            <controls:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE770;" />
                            </controls:SettingsCard.HeaderIcon>
                        </controls:SettingsCard>
                        <controls:SettingsCard x:Name="ProxiFyreCard"
                                               l:Uids.Uid="SetupViaProxifyreCard"
                                               IsClickEnabled="True"
                                               Click="ProxiFyreCard_Click">
                            <controls:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE71D;" />
                            </controls:SettingsCard.HeaderIcon>
                        </controls:SettingsCard>
                        <controls:SettingsCard x:Name="SetupManuallyCard"
                                               l:Uids.Uid="SetupProxyManuallyCard"
                                               IsClickEnabled="True"
                                               Click="SetupManuallyCard_Click">
                            <controls:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE711;" />
                            </controls:SettingsCard.HeaderIcon>
                        </controls:SettingsCard>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Grid>
        
        <Grid x:Name="ActionButtonsGrid" Grid.Row="2" MinHeight="72">
            <Rectangle Fill="{ThemeResource ControlFillColorSecondaryBrush}"/>

            <Grid Padding="20">
                <Button x:Name="GetHelpButton" l:Uids.Uid="GetHelpButton" Padding="6" Click="GetHelpButton_Click">
                    <Button.Content>
                        <FontIcon Glyph="&#xE897;" FontSize="16"/>
                    </Button.Content>
                </Button>
                <StackPanel Orientation="Horizontal" Spacing="10"  HorizontalAlignment="Right" Visibility="Collapsed">
                    <Button x:Name="CancelButton" l:Uids.Uid="ExitButton" MinWidth="150" Click="CancelButton_Click" IsEnabled="True"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
