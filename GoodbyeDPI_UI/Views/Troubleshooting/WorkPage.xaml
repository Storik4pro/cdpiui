<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDPI_UI.Views.Troubleshooting.WorkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI.Views.Troubleshooting"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:l="using:WinUI3Localizer"
    xmlns:tcontrols="using:CDPI_UI.Controls.Troubleshooting">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="ContentGrid" Padding="20, 0, 20, 0" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="LoadingStackPanel" Grid.Row="1">
                <StackPanel.RenderTransform>
                    <TranslateTransform/>
                </StackPanel.RenderTransform>
                <TextBlock l:Uids.Uid="TroubleshootingWorkingTitle" Style="{StaticResource TitleTextBlockStyle}"/>
                <RichTextBlock Margin="0 15" TextWrapping="Wrap" HorizontalAlignment="Left" IsTextSelectionEnabled="False">
                    <Paragraph>
                        <Run l:Uids.Uid="TroubleshootingWaitTextBlock"/>
                    </Paragraph>
                </RichTextBlock>
                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Spacing="10">
                    <ProgressRing Height="20" Width="20"/>
                    <TextBlock x:Name="CurrentStateTextBlock" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="ViewResultsStackPanel" Grid.Row="1">
                <TextBlock x:Name="ResultTextBlock" Style="{StaticResource TitleTextBlockStyle}"/>
                <RichTextBlock Margin="0 15" TextWrapping="Wrap" HorizontalAlignment="Left" IsTextSelectionEnabled="False">
                    <Paragraph>
                        <Run x:Name="ResultTipTextBlock"/>
                    </Paragraph>
                </RichTextBlock>
            </StackPanel>
            
            <StackPanel x:Name="FixStackPanel" Grid.Row="1">
                <TextBlock l:Uids.Uid="FixTextBlock" Style="{StaticResource TitleTextBlockStyle}"/>
                <RichTextBlock Margin="0 15" TextWrapping="Wrap" HorizontalAlignment="Left" IsTextSelectionEnabled="False">
                    <Paragraph>
                        <Run l:Uids.Uid="FixTipTextBlock"/>
                    </Paragraph>
                </RichTextBlock>
                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Spacing="10">
                    <ProgressRing Height="20" Width="20"/>
                    <TextBlock l:Uids.Uid="WorkingOnItTextBlock" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <Grid x:Name="DiagnosticResultStackPanel" Grid.Row="2" Visibility="Collapsed" >
                <ListView x:Name="DiagnosticResultListView" ItemContainerStyle="{StaticResource ListViewSmallItemStretchStyle}" Style="{StaticResource FixedHeaderListViewStyle}" Margin="0 0 0 10">
                    <ListView.Header>
                        <tcontrols:DiagnosticResultUserControl l:Uids.Uid="/Troubleshooting/DiagnosticTableHeader" ShowTopRectangle="True"/>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:DiagnosticResultModel">
                            <tcontrols:DiagnosticResultUserControl 
                                    IsHighlighted="{x:Bind IsHighlighted, Mode=OneWay}"
                                    IconGlyph="{x:Bind IconGlyph, Mode=OneWay}" 
                                    DisplayText="{x:Bind CriterionName, Mode=OneWay}" 
                                    CurrentStateText="{x:Bind CurrentValue, Mode=OneWay}"
                                    TargetStateText="{x:Bind TargetValue, Mode=OneWay}"
                                    IsFixAvailable="{x:Bind IsFixAvailable, Mode=OneWay}"
                                    IsHelpAvailable="{x:Bind IsHelpAvailable, Mode=OneWay}"
                                    HelpText="{x:Bind HelpText, Mode=OneWay}"
                                    HelpUrl="{x:Bind HelpUrl, Mode=OneWay}"
                                    ShowActionButtons="True"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid x:Name="FixResultStackPanel" Grid.Row="2" Visibility="Collapsed" >
                <ListView x:Name="FixResultListView" ItemContainerStyle="{StaticResource ListViewSmallItemStretchStyle}" Style="{StaticResource FixedHeaderListViewStyle}" Margin="0 0 0 10">
                    <ListView.Header>
                        <tcontrols:DiagnosticResultUserControl l:Uids.Uid="/Troubleshooting/DiagnosticTableHeader" ShowTopRectangle="True"/>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:DiagnosticResultModel">
                            <tcontrols:DiagnosticResultUserControl 
                                    IsHighlighted="{x:Bind IsHighlighted, Mode=OneWay}"
                                    IconGlyph="{x:Bind IconGlyph, Mode=OneWay}" 
                                    DisplayText="{x:Bind CriterionName, Mode=OneWay}" 
                                    CurrentStateText="{x:Bind CurrentValue, Mode=OneWay}"
                                    TargetStateText="{x:Bind TargetValue, Mode=OneWay}"
                                    IsFixAvailable="{x:Bind IsFixAvailable, Mode=OneWay}"
                                    IsHelpAvailable="{x:Bind IsHelpAvailable, Mode=OneWay}"
                                    HelpText="{x:Bind HelpText, Mode=OneWay}"
                                    HelpUrl="{x:Bind HelpUrl, Mode=OneWay}"
                                    ShowActionButtons="True"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid x:Name="EndWork" Padding="20, 0, 20, 0" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1">
                <StackPanel.RenderTransform>
                    <TranslateTransform/>
                </StackPanel.RenderTransform>
                <TextBlock l:Uids.Uid="GoodCheckSelectionComplete" Style="{StaticResource TitleTextBlockStyle}"/>
                <RichTextBlock Margin="0 15" TextWrapping="Wrap" HorizontalAlignment="Left" IsTextSelectionEnabled="False">
                    <Paragraph>
                        <Run l:Uids.Uid="GoodCheckSelectionCompleteTip"/>
                    </Paragraph>
                </RichTextBlock>
            </StackPanel>

        </Grid>

        <Grid x:Name="LoadingStateGrid" Grid.Row="1" Visibility="Collapsed" Margin="0 20 0 0">
            <StackPanel>
                <TextBlock l:Uids.Uid="WorkingOnItTextBlock" x:Name="LoadingHeader" Margin="20 0 0 5" Visibility="Collapsed"/>
                <ProgressBar x:Name="LoadingProgressBar" IsIndeterminate="True" VerticalAlignment="Top" CornerRadius="0"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="ActionButtonsGrid" Grid.Row="2">
            <Rectangle Fill="{ThemeResource ControlFillColorSecondaryBrush}"/>

            <Grid Padding="20">
                <Button l:Uids.Uid="GetHelpButton" x:Name="GetHelpButton" Padding="6" Click="GetHelpButton_Click">
                    <Button.Content>
                        <FontIcon Glyph="&#xE897;" FontSize="16"/>
                    </Button.Content>
                </Button>
                <StackPanel Orientation="Horizontal" Spacing="10"  HorizontalAlignment="Right">
                    <Button l:Uids.Uid="StopButton" x:Name="CancelButton" MinWidth="150" Click="CancelButton_Click" IsEnabled="False"/>
                    <Button l:Uids.Uid="ExitButton" x:Name="ExitButton" MinWidth="150" Click="ExitButton_Click" Visibility="Collapsed" />
                    <Button l:Uids.Uid="GoForwardButton" x:Name="ForwardButton" Style="{ThemeResource AccentButtonStyle}" MinWidth="150" Visibility="Collapsed" Click="ForwardButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
