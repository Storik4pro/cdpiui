<Window
    x:Class="GoodbyeDPI_UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CDPI UI"
    xmlns:swapChain="using:Microsoft.Graphics.Canvas.UI.Xaml">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid x:Name="AppTitleBar"
            Canvas.ZIndex="1"
            Height="{Binding ElementName=NavView, Path=CompactPaneLength}"
            IsHitTestVisible="True"
            VerticalAlignment="Top">
                <Image Source="Assets/StoreLogo.png"
                HorizontalAlignment="Left"
                Width="16" Height="16"
                Margin="0,0"/>
                <TextBlock x:Name="AppTitleTextBlock" Text="[BETA] CDPI UI"
                TextWrapping="NoWrap"
                Style="{StaticResource CaptionTextBlockStyle}"
                VerticalAlignment="Center"
                Margin="30,0,0, 0" />

            </Grid>

            <NavigationView x:Name="NavView" 
            Canvas.ZIndex="0"
            PaneDisplayMode="Auto"
            IsSettingsVisible="False"
            IsTitleBarAutoPaddingEnabled="False"
            IsBackEnabled="True"
            IsBackButtonVisible="Auto"
            Loaded="NavView_Loaded"
            ItemInvoked="NavView_ItemInvoked"
            BackRequested="NavView_BackRequested"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            AlwaysShowHeader="False">
                <NavigationView.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" MaxWidth="1000">
                            <TextBlock Text="{Binding}" MaxWidth="1000" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </NavigationView.HeaderTemplate>
                <NavigationView.MenuItems>

                    <NavigationViewItem Content="Home" Tag="GoodbyeDPI_UI.Views.MainPage" Icon="Home"/>
                    <NavigationViewItemSeparator/>
                    <NavigationViewItemHeader Content="Settings"/>

                    <NavigationViewItem Content="Personalize" Tag="GoodbyeDPI_UI.Views.PersonalizePage">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE771;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="System" Tag="GoodbyeDPI_UI.Views.SystemPage" >
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE770;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Utils" Tag="GoodbyeDPI_UI.Views.UtilsPage" >
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE7B8;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Update" Tag="GoodbyeDPI_UI.Views.UpdatePage" Icon="Sync" />

                    <NavigationViewItemSeparator/>
                    <NavigationViewItemHeader Content="Components"/>

                    <NavigationViewItem Content="GoodbyeDPI" Tag="SamplePage1" >
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE839;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Zapret" Tag="SamplePage1" >
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE839;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="ByeDPI" Tag="SamplePage1" >
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE839;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="SpoofDPI" Tag="SamplePage1" >
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE839;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                </NavigationView.MenuItems>
                <NavigationView.FooterMenuItems>

                    <NavigationViewItem Content="About" Tag="SamplePage5">

                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </NavigationViewItem.Icon>

                    </NavigationViewItem>

                </NavigationView.FooterMenuItems>


            <Frame x:Name="ContentFrame" Margin="0,0,0,0">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition  />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>

            <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup>
                        <VisualState>
                            <VisualState.StateTriggers>
                                <AdaptiveTrigger
         MinWindowWidth="{x:Bind NavViewCompactModeThresholdWidth}"/>
                            </VisualState.StateTriggers>
                            <VisualState.Setters>
                                <!-- Remove the next 3 lines for left-only navigation. -->
                                <Setter Target="NavView.PaneDisplayMode" Value="Top"/>
                                <Setter Target="NavViewSearchBox.Width" Value="200"/>
                                <Setter Target="NavView.HeaderVisibility" Value="False"/>
                                <Setter Target="PagesHeader.Visibility" Value="False"/>
                                <!-- Leave the next line for left-only navigation. -->
                                <Setter Target="ContentFrame.Padding" Value="24,0,24,24"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </NavigationView>
        

    </Grid>

</Window>
