<?xml version="1.0" encoding="utf-8"?>
<ex:WindowEx
    xmlns:ex="using:WinUIEx"
    x:Class="CDPI_UI.OfflineHelpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.Labs.WinUI.MarkdownTextBlock"
    xmlns:l="using:WinUI3Localizer">

    <ex:WindowEx.SystemBackdrop>
        <MicaBackdrop />
    </ex:WindowEx.SystemBackdrop>

    <Grid>
        <Grid.Resources>
            <Thickness x:Key="NavigationViewContentMargin">0,43,0,0</Thickness>
            <Thickness x:Key="NavigationViewMinimalContentMargin">0,43,0,0</Thickness>
            <Thickness x:Key="NavigationViewHeaderMargin">0,0,0,0</Thickness>
        </Grid.Resources>
        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1"
              Height="48"
              IsHitTestVisible="True"
              VerticalAlignment="Top"
              Margin="0, 0, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" 
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Width="30"
                        Height="30"
                        Padding="6"
                        PointerEntered="BackButton_PointerEntered" 
                        PointerExited="BackButton_PointerExited"
                        Click="BackButton_Click"
                        Visibility="Collapsed">
                <AnimatedIcon x:Name="SearchAnimatedIcon">
                    <AnimatedIcon.Source>
                        <animatedvisuals:AnimatedBackVisualSource/>
                    </AnimatedIcon.Source>
                    <AnimatedIcon.FallbackIconSource>
                        <SymbolIconSource Symbol="Back"/>
                    </AnimatedIcon.FallbackIconSource>
                </AnimatedIcon>
            </Button>

            <Grid x:Name="WindowMoveAera" Grid.Column="1" Margin="8, 0, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Assets/Icons/Help.ico"
                       HorizontalAlignment="Left"
                       Width="16" Height="16"
                       Margin="0,0" Grid.Column="1"/>
                <TextBlock l:Uids.Uid="OfflineHelpWindowTitleTextBlock"
                               x:Name="AppTitleTextBlock"
                               TextWrapping="NoWrap"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               VerticalAlignment="Center"
                               Grid.Column="2" Margin="18, 0, 0, 0"/>
                <TextBlock l:Uids.Uid="PreviewTextBlock"
                               x:Name="AppTitleSubTextBlock" 
                               Grid.Column="3"
                               TextWrapping="NoWrap"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               VerticalAlignment="Center"
                               Margin="8, 0, 0, 0"/>
            </Grid>
            
        </Grid>
        <Grid Margin="0,0,0,0" Padding="0">
            <NavigationView x:Name="HelpNavigationView" IsBackButtonVisible="Collapsed" IsSettingsVisible="False"
                            Canvas.ZIndex="0" SelectionChanged="HelpNavigationView_SelectionChanged"
                            IsTitleBarAutoPaddingEnabled="False">
                
                <NavigationView.FooterMenuItems>
                    <NavigationViewItem Content="About" Tag="AboutHelp">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.FooterMenuItems>
                <ScrollViewer x:Name="ContentGrid" Grid.Column="1" Padding="20 0 20 0">
                    <controls:MarkdownTextBlock 
                        Margin="0 20" x:Name="MarkdownTextBlock" 
                        Config="{x:Bind MarkdownConfig, Mode=OneTime}"
                        UseAutoLinks="True"
                        UseEmphasisExtras="True"
                        UseListExtras="True"
                        UsePipeTables="True"
                        UseTaskLists="True"/>
                </ScrollViewer>
            </NavigationView>
             
            
        </Grid>
    </Grid>
</ex:WindowEx>
