<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="CDPI_UI.CreateConfigHelperWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:winex="using:WinUIEx"
    xmlns:l="using:WinUI3Localizer">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="AppBar" Height="36"/>
            <RowDefinition x:Name="FuncBar" Height="36"/>
            <RowDefinition x:Name="ViewHeader" Height="Auto"/>
            <RowDefinition x:Name="View" Height="*"/>
            <RowDefinition x:Name="StatusBar" Height="28"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style x:Key="ContentFrameDefaultStyle" TargetType="Frame">
                <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"/>
            </Style>
            <Style x:Key="ContentFrameTransparentStyle" TargetType="Frame">
                <Setter Property="Background" Value="Transparent"/>
            </Style>
        </Grid.Resources>
        
        <Grid x:Name="AppTitleBar"
            Canvas.ZIndex="1"
            Grid.Row="0"
            Height="48"
            IsHitTestVisible="True"
            VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                    Source="/Assets/Icons/Edit.png"
                    HorizontalAlignment="Left"
                    Width="16" Height="16"
                    Margin="16,0"/>
                <TextBlock Grid.Column="1"
                    l:Uids.Uid="CreateConfigHelperTitleTextBlock"
                    x:Name="AppTitleTextBlock"
                    TextWrapping="NoWrap"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    VerticalAlignment="Center"
                    Margin="0, 0, 0, 0" />
                <TextBlock l:Uids.Uid="PreviewTextBlock"
                           x:Name="AppTitleSubTextBlock" 
                           Grid.Column="2"
                           TextWrapping="NoWrap"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           VerticalAlignment="Center"
                           Margin="8, 0, 0, 0"/>
            </Grid>

        </Grid>
        <Grid Grid.Row="1" Height="36">
            <Rectangle Fill="{ThemeResource LayerOnMicaBaseAltFillColorDefault}" Height="32" Width="Auto" 
               VerticalAlignment="Bottom">
            </Rectangle>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Menu" Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition x:Name="Quick" Width="Auto" />
                </Grid.ColumnDefinitions>
                <MenuBar Grid.Column="0" Margin="0 ,0 ,0, 0" Height="28">
                    <MenuBarItem l:Uids.Uid="FileMenuItem">
                        <MenuFlyoutItem x:Name="HomeItem" l:Uids.Uid="HomeMenuItem" Icon="Home" Click="HomeItem_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Name="CreateNewConfigButton" l:Uids.Uid="CreateNewConfigMenuItem" Click="CreateNewConfigButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE710;" />
                            </MenuFlyoutItem.Icon>
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="N"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Name="ImportConfigFromFileButton" l:Uids.Uid="ImportConfigFromFileMenuItem" Click="ImportConfigFromFileButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8E5;" />
                            </MenuFlyoutItem.Icon>
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="O"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Name="EditConfigButton" l:Uids.Uid="EditConfigMenuItem" Click="EditConfigButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE70F;" />
                            </MenuFlyoutItem.Icon>
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="E"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutSubItem l:Uids.Uid="GoodCheckConfigSelectionMenuItem">
                            <MenuFlyoutItem x:Name="BeginNewGoodCheckSelectionButton" l:Uids.Uid="BeginNewSelectionMenuItem" Click="BeginNewGoodCheckSelectionButton_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="RecentGoodCheckSelectionButton" l:Uids.Uid="RecentSelectionsMenuItem" Click="RecentGoodCheckSelectionButton_Click"/>
                            <MenuFlyoutItem x:Name="OpenGoodCheckReportButton" l:Uids.Uid="XmlReportMenuItem" Click="OpenGoodCheckReportButton_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8E5;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>
                        
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem l:Uids.Uid="ExitMenuItem" x:Name="ExtiMenuButton" Click="ExtiMenuButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE711;" />
                            </MenuFlyoutItem.Icon>
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Menu" Key="F4"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                    </MenuBarItem>

                    <MenuBarItem l:Uids.Uid="EditMenuItem" x:Name="EditMenuItem" Visibility="Collapsed">
                        <MenuFlyoutItem x:Name="Search" l:Uids.Uid="SearchMenuItem" Click="Search_Click" Icon="Find">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="F"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Name="SearchAndReplace" l:Uids.Uid="SearchAndReplaceMenuItem" Click="SearchAndReplace_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="H"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                    </MenuBarItem>
                    <MenuBarItem l:Uids.Uid="ViewMenuItem" x:Name="ViewMenuItem" Visibility="Collapsed">
                        <MenuFlyoutSubItem l:Uids.Uid="DefaultEditorBackgroundStyleMenuItem">
                            <RadioMenuFlyoutItem l:Uids.Uid="DefaultBackgroundMenuItem" GroupName="Background" x:Name="DefaultBackgroundMenuItem" Click="EditorBackgroundMenuItem_Click"/>
                            <RadioMenuFlyoutItem l:Uids.Uid="MicaBackgroundMenuItem" GroupName="Background" x:Name="MicaBackgroundMenuItem" Click="EditorBackgroundMenuItem_Click"/>
                            <RadioMenuFlyoutItem l:Uids.Uid="MicaAltMenuItem" GroupName="Background" x:Name="MicaAltMenuItem" Click="EditorBackgroundMenuItem_Click"/>
                            <RadioMenuFlyoutItem l:Uids.Uid="MicaSmokeMenuItem" GroupName="Background" x:Name="MicaSmokeMenuItem" Click="EditorBackgroundMenuItem_Click"/>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem l:Uids.Uid="ZoomInMenuItem" x:Name="ZoomInMenuItem" Click="ZoomInMenuItem_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Add"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8A3;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem l:Uids.Uid="ZoomOutMenuItem" x:Name="ZoomOutMenuItem" Click="ZoomOutMenuItem_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Subtract"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE71F;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem l:Uids.Uid="ZoomReturnMenuItem" x:Name="ZoomReturnMenuItem" Click="ZoomReturnMenuItem_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number0"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                    </MenuBarItem>
                    
                    <MenuBarItem l:Uids.Uid="StoreMenuBarItem">
                        <MenuFlyoutItem x:Name="ComponentsStore" l:Uids.Uid="StoreOpenComponentsMenuItem" Click="ComponentsStore_Click"/>
                        <MenuFlyoutItem x:Name="AddOnsStore" l:Uids.Uid="StoreOpenAddOnsMenuItem" Click="AddOnsStore_Click"/>
                        <MenuFlyoutItem x:Name="ConfigsStore" l:Uids.Uid="StoreOpenConfigsMenuItem" Click="ConfigsStore_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Name="Store" l:Uids.Uid="StoreOpenMenuItem" Click="Store_Click">
                            <MenuFlyoutItem.Icon>
                                <ImageIcon Source="/Assets/Icons/Store.png"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuBarItem>
                    <MenuBarItem l:Uids.Uid="HelpMenuItem">
                        <MenuFlyoutItem l:Uids.Uid="HelpOfflineMenuItem" x:Name="OfflineHelpButton" Click="OfflineHelpButton_Click"/>
                        <MenuFlyoutItem l:Uids.Uid="HelpOnlineMenuItem"  x:Name="OnlineHelpButton" Click="OnlineHelpButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE774;"/>
                            </MenuFlyoutItem.Icon>
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F1"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Name="ReportIssueButton" l:Uids.Uid="ReportIssueMenuItem" Click="ReportIssueButton_Click"/>
                    </MenuBarItem>
                </MenuBar>
                <Grid Grid.Column="2" >
                    
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="Black">

        </Grid>
        <Frame x:Name="ContentFrame" 
               Grid.Row="3"
               Navigating="ContentFrame_Navigating">
            
        </Frame>
        <Grid Grid.Row="4">
            <Grid Padding="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusTextBlock" l:Uids.Uid="ReadyTextBlock" Grid.Column="0" VerticalAlignment="Center"/>
            </Grid>
            <Rectangle Fill="{ThemeResource LayerOnMicaBaseAltFillColorDefault}" Height="32" Width="Auto" 
                VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</winex:WindowEx>
