<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CDPI_UI.GoodCheckSitelistButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Border CornerRadius="5" Height="55" Background="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Grid Padding="10 6" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <FontIcon Glyph="&#xF000;" FontSize="16" Margin="0 0 10 0"/>
            <StackPanel Grid.Column="1">
                <TextBlock Text="{x:Bind Title}"/>
                <TextBlock Text="{x:Bind PackName}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
                <Button x:Name="EditButton" Padding="6" Click="EditButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                            <TextBlock Text="Изменить"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="RemoveButton" Padding="6" Height="33" Width="33" ToolTipService.ToolTip="Убрать" Click="RemoveButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE894;" FontSize="16"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
