<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CDPI_UI.SitelistButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Button Padding="6" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" Height="40" Click="Button_Click"
                ToolTipService.ToolTip="{x:Bind Title, Mode=OneWay}">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <FontIcon x:Name="LogoFontIcon" Glyph="&#xE7C3;" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <TextBlock Text="{x:Bind Title, Mode=OneWay}" 
                               VerticalAlignment="Center" 
                               Grid.Column="1" 
                               Margin="0 0 10 0"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{x:Bind PackName, Mode=OneWay}" 
                               Style="{ThemeResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               VerticalAlignment="Center" 
                               Grid.Column="2" 
                               TextAlignment="Right"/>
                </Grid>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
