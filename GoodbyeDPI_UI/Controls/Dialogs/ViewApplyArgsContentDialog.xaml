<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Name="ContentDialog"
    x:Class="GoodbyeDPI_UI.Controls.Dialogs.ViewApplyArgsContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodbyeDPI_UI.Controls.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Применяемые параметры"
    PrimaryButtonText="OK"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Bind DialogTitle, Mode=OneWay}" FontWeight="Light" FontSize="16"/>
        <ScrollViewer Grid.Row="1" Padding="0, 0, 0, -10" MaxHeight="300">
            <ItemsControl ItemsSource="{x:Bind Args, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <StackPanel Margin="0, 0, 0, 10">
                            <TextBlock Text="--new" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <Grid>
                                <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" 
                                    BorderBrush="{ThemeResource ControlStrokeColorForStrongFillWhenOnImageBrush}" BorderThickness="1" CornerRadius="5"/>
                                <RichTextBlock TextWrapping="Wrap" IsTextSelectionEnabled="True" Margin="10"
                                           FontSize="{Binding  ArgsFontSize, ElementName=ContentDialog}" 
                                           FontFamily="{Binding  ArgsFontFamily, ElementName=ContentDialog}" SelectionHighlightColor="Gray">
                                    <Paragraph>
                                        <Run Text="{x:Bind}"/>
                                    </Paragraph>
                                </RichTextBlock>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</ContentDialog>
