<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Name="RootDialog"
    x:Class="CDPI_UI.Controls.Dialogs.CreateConfigHelper.SelectConfigToEditContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDPI_UI.Controls.Dialogs.CreateConfigHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lcontrol="using:CDPI_UI"
    mc:Ignorable="d"
    Title="Select config to edit"
    SecondaryButtonText="Cancel"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Select component" Style="{ThemeResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Margin="0 0 0 2"/>
            <ComboBox x:Name="ComponentChooseComboBox" 
                      HorizontalAlignment="Stretch" 
                      SelectionChanged="ComponentChooseComboBox_SelectionChanged"
                      DisplayMemberPath="Name"
                      Margin="0 0 0 5"/>
            <TextBlock x:Name="SelectText" Text="Select config you want to edit" Grid.Row="0" TextWrapping="Wrap" Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel x:Name="LoadingStackPanel" Grid.Row="2" Visibility="Collapsed">
            <ProgressRing IsIndeterminate="True"/>
            <TextBlock Text="Loading..." HorizontalAlignment="Center" Margin="0 5 0 0"/> 
        </StackPanel>
        <ScrollViewer x:Name="ConfigsScrollViewer" Grid.Row="2" Visibility="Collapsed">
            <ListView x:Name="ConfigsListView" Margin="0 5 0 0" SelectionMode="None" Padding="0"
                      ItemContainerStyle="{StaticResource ListViewItemStretchStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ConfigToEditModel">
                        <lcontrol:SitelistButton 
                            Title="{x:Bind DisplayName, Mode=OneWay}"
                            PackName="{x:Bind PackName, Mode=OneWay}"
                            PackId="{x:Bind PackId, Mode=OneWay}"
                            Directory="{x:Bind Directory, Mode=OneWay}"
                            IsLogoVisible="False"
                            ClickCommand="{Binding DataContext.SelectConfigCommand, ElementName=RootDialog}"
                            Margin="0 2.5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</ContentDialog>
