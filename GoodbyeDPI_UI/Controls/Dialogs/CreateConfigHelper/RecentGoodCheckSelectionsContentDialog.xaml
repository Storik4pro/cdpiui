<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Name="RootDialog"
    x:Class="GoodbyeDPI_UI.Controls.Dialogs.CreateConfigHelper.RecentGoodCheckSelectionsContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodbyeDPI_UI.Controls.Dialogs.CreateConfigHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:lcontrol="using:GoodbyeDPI_UI"
    Title="Recent GoodCheck selections"
    SecondaryButtonText="Cancel"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ReportErrorTextBlock" Text="ERR_REPORT_LOAD_FAILURE" Grid.Row="2" Visibility="Collapsed"/>
        <ScrollViewer x:Name="ConfigsScrollViewer" Grid.Row="2" Visibility="Visible">
            <ListView x:Name="ConfigsListView" Margin="0 5 0 0" SelectionMode="None" Padding="0"
                  ItemContainerStyle="{StaticResource ListViewItemStretchStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ReportFileToEditModel">
                        <lcontrol:SitelistButton 
                            Title="{x:Bind DisplayName, Mode=OneWay}"
                            PackName="{x:Bind PackName, Mode=OneWay}"
                            Directory="{x:Bind Directory, Mode=OneWay}"
                            IsLogoVisible="False"
                            ClickCommand="{Binding DataContext.SelectConfigCommand, ElementName=RootDialog}"
                            Margin="0 2.5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</ContentDialog>
