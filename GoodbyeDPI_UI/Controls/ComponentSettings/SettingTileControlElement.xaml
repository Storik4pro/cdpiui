<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="GoodbyeDPI_UI.SettingTileControlElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodbyeDPI_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls" 
    xmlns:winuicontrols="using:System.Windows.Controls">

    <UserControl.Resources>
        <local:GlyphToFontIconConverter x:Key="GlyphToFontIconConverter"/>
    </UserControl.Resources>

    <Grid MinHeight="60">
        <Rectangle 
            x:Name="TopRectangle"
            Height="1" 
            HorizontalAlignment="Stretch" 
            Fill="{ThemeResource CardStrokeColorDefaultSolidBrush}" 
            VerticalAlignment="Top"/>
        <controls:SettingsCard x:Name="SettingsCard"
                               Header="{x:Bind Title}" 
                               HeaderIcon="{x:Bind HeaderIconGlyph, Converter={StaticResource GlyphToFontIconConverter}}"
                               CornerRadius="0" 
                               Background="Transparent" 
                               BorderBrush="Transparent"
                               Padding="20 10 20 10"
                               IsClickEnabled="{x:Bind IsClickEnabled}"
                               Click="SettingsCard_Click">
            
            <controls:SettingsCard.ActionIcon>
                <FontIcon Glyph="{x:Bind ActionIconGlyph}"/>
            </controls:SettingsCard.ActionIcon>
            
            <ContentPresenter Content="{x:Bind InnerContent, Mode=OneWay}" />
        </controls:SettingsCard>
    </Grid>
</UserControl>
